@using Outsourcing.Core
@model Outsourcing.Data.Models.Color
@{
    ViewBag.Title = "Chỉnh sửa chủ sở hữu";
}

@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Chỉnh sửa nội dung
            </div>
            @if (Model != null)
            {
                using (Html.BeginForm("Edit", "Color", null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.isDelete)
                    @Html.HiddenFor(model => model.StaffUserName)

                    <div class="tabbable">
                        <ul class="nav nav-tabs" id="myTab">
                            <li class="active">
                                <a data-toggle="tab" href="#tab1">
                                    <i class="green ace-icon fa fa-home bigger-120"></i>
                                    Nội dung
                                </a>
                            </li>

                            @*<li class="">
                                    <a data-toggle="tab" href="#tab2">
                                        Chỉnh sửa SEO
                                    </a>
                                </li>*@
                        </ul>

                        <div class="tab-content">
                            <div id="tab1" class="tab-pane fade active in">
                                <div class="form-group ">
                                    <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Tên CSH</label>

                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Name)
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Email</label>

                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Email)
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Số Điện thoại 1</label>

                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Phone_1)
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Số Điện thoại 2</label>

                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Phone_2)
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Số Điện thoại 3</label>

                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Phone_3)
                                    </div>
                                </div>
                            </div>

                            @*<div id="tab2" class="tab-pane fade">

                                    <div class="form-group ">
                                        @Html.MyLabelFor(model => model.MetaKeywords)
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.MetaKeywords)
                                            @Html.ValidationMessageFor(model => model.MetaKeywords)
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        @Html.MyLabelFor(model => model.MetaTitle)
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.MetaTitle)
                                            @Html.ValidationMessageFor(model => model.MetaTitle)
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        @Html.MyLabelFor(model => model.Slug)
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Slug)
                                            @Html.ValidationMessageFor(model => model.Slug)
                                        </div>
                                    </div>
                                </div>*@

                        </div>
                    </div>


                    @*
                        partial for group button
                    *@
                    @Html.Partial("_PartialButtonGroup", "/Admin/Color")
                }
            }
            else
            {
                <h1>Không tìm thấy tin tức!</h1>
            }
        </div>
    </div>
</div>