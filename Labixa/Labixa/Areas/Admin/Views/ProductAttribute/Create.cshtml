@using Outsourcing.Core
@model Labixa.Areas.Admin.ViewModel.ProductAttributeFormModel
@{
    ViewBag.Title = @"Quản lý thuộc tính";
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="/Product">Quản lý sản phẩm</a>
            </li>
            <li class="active">Thêm mới thuộc tính sản phẩm</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Thêm mới thuộc tính sản phẩm
            </div>
            @using (Html.BeginForm("Create", "ProductAttribute", null, FormMethod.Post, new { @class = "form-horizontal" })) 
            {
                @Html.ValidationSummary(true)
                
                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                Nội dung
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="form-group">
                                @Html.MyLabelFor(model => model.Name)
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                                </div>
                            <div class="form-group">
                                @Html.MyLabelFor(model => model.ControlType)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.ControlType)
                                    @Html.ValidationMessageFor(model => model.ControlType)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.MyLabelFor(model => model.Description)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Description)
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                
                
              
                    @*
                        partial for group button
                    *@
                    @Html.Partial("_PartialButtonGroup", "/Admin/ProductAttribute")
            }
        </div>
    </div>
</div>