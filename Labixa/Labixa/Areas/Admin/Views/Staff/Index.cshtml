@model Labixa.Areas.Admin.Models.ListUsersAndProductsModel
@using Outsourcing.Data.Models
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Quản lý Tài khoản";

}
@section scripts{
    <script src="/Content/admin/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Content/admin/js/jquery.dataTables.bootstrap.js" type="text/javascript"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li class="active">Quản lý Nhân Viên</li>
        </ul>
    </div>
}


<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            @*<div class="alert alert-block alert-success">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <i class="icon-ok green"></i>
                    Quản lý tin tức
                </div>*@
            @*<a class="btn btn-success" href="/Admin/Staff/Create" style="margin-bottom:10px">Thêm Nhân Viên</a>*@
            <div class="table-header">Danh sách Nhân Viên</div>
            <div class="table-responsive">
            <table id="blogTable" class="table table-bordered table-striped table-fixed-header">
                <thead>
                    <tr role="row">
                        <th>STT</th>
                        <th>Tên Đăng Nhập</th>
                        <th>Điện Thoại</th>
                        <th>Họ Tên</th>
                        <th>Phân Quyền</th>
                        <th>Danh sách bất động sản</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody role="alert" aria-live="polite" aria-relevant="all">

                    @if (Model.listUser != null && Model.listUser.Any())
                    {
                        int count = 0;
                        foreach (var item in Model.listUser)
                        {
                            count++;
                            <tr class="odd">
                                <td class=" sorting_1">@count</td>
                                <td class="  ">@item.UserName</td>
                                <td class="  ">@item.PhoneNumber</td>
                                <td class="  ">@item.FirstName <span> @item.LastName</span></td>
                                <td class="  ">@Enum.GetName(typeof(SystemRoles), int.Parse(item.Roles.FirstOrDefault().RoleId))</td>
                                <td class="  ">
                                    @if (Model.listProducts.Where(p => p.ProductAttributeMappings.Where(d => d.ProductAttributeId == 19).FirstOrDefault().Value.Equals(item.UserName)).Count() > 0)
                                    {

                                        <a target="_blank" href="/Admin/Staff/List?UserName=@item.UserName" class="btn btn-xs btn-danger">
                                            Danh sách bất động sản (@Model.listProducts.Where(p => p.ProductAttributeMappings.Where(d => d.ProductAttributeId == 19).FirstOrDefault().Value.Equals(item.UserName)).Count())
                                        </a>

                                    }

                                </td>
                                <td class=" ">
                                    <div class="btn-group">

                                        <a href="/Admin/Staff/Edit?id=@item.Id" class="btn btn-xs btn-info">
                                            <i class="icon-edit bigger-120"></i>
                                        </a>
                                        @*<a href="/Admin/Staff/Delete?id=@item.Id" class="btn btn-xs btn-danger" onclick="alert('Xóa tài khoản thành công')">
                                                <i class="icon-trash bigger-160"></i>
                                            </a>*@
                                        @if (User.IsInRole("SuperAdmin"))
                                        {
                                            <a href="#" class="btn btn-xs btn-danger" data-href="/Admin/Staff/Delete?id=@item.Id" data-toggle="modal" data-target="#confirm-delete">
                                                <i class="icon-trash bigger-160"></i>
                                            </a><br>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Xác nhận xóa</h4>
            </div>

            <div class="modal-body">
                <p>Bạn có muốn xóa thành viên này không?</p>
            </div>

            <div class="modal-footer">
                <a class="btn btn-danger btn-ok">Xóa</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>

            </div>
        </div>
    </div>
</div>

<script>
    $('#confirm-delete').on('show.bs.modal', function (e) {
        $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
    });
</script>

<script type="text/javascript">

    $(document).ready(function () {
        var table = $("#blogTable").DataTable();
        //var arrayfilter = [2, 4];

        createDropFilter(table, [2]);
        bindDropFilter(table, [5]);

    });

    function showModal() {

    }

    function createDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });

            table.column(i).data().unique().sort().each(function (d, j) {
                filter1.append('<option value="' + d + '">' + d + '</option>');
            });

        });
    }
    function bindDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });
        });
    }
</script>