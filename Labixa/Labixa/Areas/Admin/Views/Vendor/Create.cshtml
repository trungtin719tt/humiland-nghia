@using Outsourcing.Core
@model Outsourcing.Data.Models.Vendor
@{
}
Resources.
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">

            <div class="alert alert-block alert-info">
                @Resources.Admin_Create
            </div>
            @using (Html.BeginForm("Create", "Vendor", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                <i class="green ace-icon fa fa-home bigger-120"></i>
                                @Resources.Content
                            </a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" href="#tab2">
                                <i class="green ace-icon fa fa-home bigger-120"></i>
                                Chỉnh sửa SEO
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Tên Khóa Học</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Name)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Hình Ảnh</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Address, "GetImageFromElfinder")
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Mô Tả</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Description)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Giá</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Percent)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Facebook</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Phone)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Linkedin</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Type)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Google+</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Note)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Nội dung</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Content, "CkEditor")
                                </div>
                            </div>

                        </div>

                        <div id="tab2" class="tab-pane fade">

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaKeywords)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaKeywords)
                                        @Html.ValidationMessageFor(model => model.MetaKeywords)
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaTitle)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaTitle)
                                        @Html.ValidationMessageFor(model => model.MetaTitle)
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaDescription)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaDescription)
                                        @Html.ValidationMessageFor(model => model.MetaDescription)
                                    </div>
                                </div>
                                @*<div class="form-group ">
                                    @Html.MyLabelFor(model => model.Slug)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Slug)
                                        @Html.ValidationMessageFor(model => model.Slug)
                                    </div>
                                </div>*@
                            </div>

                    </div>
                </div>



                @*
                    partial for group button
                *@
                @Html.Partial("_PartialButtonGroup", "/Admin/Vendor")
            }
        </div>
    </div>
</div>
