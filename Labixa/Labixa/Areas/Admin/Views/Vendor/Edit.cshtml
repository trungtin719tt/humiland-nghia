@using Outsourcing.Core
@model Labixa.Areas.Admin.Models.VendorAndProductModel

@{
    ViewBag.Title = "Chỉnh sửa Thông báo";
}
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">

            <div class="alert alert-block alert-info">
                Chi tiết thông báo
            </div>
            <table id="VendorTable" class="table table-bordered table-striped table-fixed-header">
                <tbody role="alert" aria-live="polite" aria-relevant="all">

                    <tr class="odd">
                        <td class="hidden-480 ">Loại liên hệ</td>
                        <td class="hidden-480 ">
                            @if (Model.vendor.Type.Equals("0"))
                            {<span>Liên hê công ty</span> }
                            else
                            {<span>Liên hê bất động sản</span> }
                        </td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Tên người gửi</td>
                        <td class="hidden-480 ">@Model.vendor.Name</td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Email người gửi</td>
                        <td class="hidden-480 ">@Model.vendor.Address</td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Sđt người gửi</td>
                        <td class="hidden-480 ">@Model.vendor.Phone</td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Tới</td>
                        <td class="hidden-480 ">@if (Model.vendor.Type.Equals("0"))
            {<span>Công ty</span> }
            else
            {<span>@Model.vendor.Content</span> }</td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Email người môi giới</td>
                        <td class="hidden-480 ">
                            @if (Model.product != null)
            {<text>@Model.product.ProductAttributeMappings.Where(p=>p.ProductAttributeId==22).FirstOrDefault().Value</text>}
                        </td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Sđt người môi giới</td>
                        <td class="hidden-480 ">
                            @if (Model.product != null)
            {<text>@Model.product.ProductAttributeMappings.Where(p => p.ProductAttributeId == 21).FirstOrDefault().Value</text>}
                        </td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Bất động sản (Với liên hệ bất động sản)</td>
                        <td class="hidden-480 ">@if (Model.product != null)
            {<text><a href="/san-pham/@Model.product.Slug" target="_blank">@Model.product.Name</a> </text>}</td>
                    </tr>
                    <tr class="odd">
                        <td class="hidden-480 ">Nội dung</td>
                        <td class="hidden-480 ">@Model.vendor.Description</td>
                    </tr>
                    

            </tbody>
        </table>

