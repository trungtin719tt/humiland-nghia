@model IEnumerable<Outsourcing.Data.Models.Vendor>
@using Outsourcing.Data.Models
@using Outsourcing.Core.Common

@{
    ViewBag.Title = "Quản lý Thông báo";
}
@section scripts{
    <script src="/Content/admin/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Content/admin/js/jquery.dataTables.bootstrap.js" type="text/javascript"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            @*<div class="alert alert-block alert-success">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <i class="icon-ok green"></i>
                    Quản lý tin tức
                </div>*@
            @*<a class="btn btn-success" href="/Admin/Vendor/Create" style="margin-bottom:10px">Thêm mới nhà cung cấp</a>*@

            <div class="row" style="margin-bottom:10px">
                <div class="col-sm-6">
                    <div class="widget-box transparent">
                    </div>
                </div>

            </div>


            <div class="table-header">Danh sách thông báo</div>
            <div class="table-responsive">

            <table id="VendorTable" class="table table-bordered table-striped table-fixed-header">
                <thead>
                    <tr role="row">
                        <th>STT</th>
                        <th>Loại liên hệ</th>
                        <th>Tên người gửi</th>
                        <th>Email người gửi</th>
                        <th>Sđt người gửi</th>
                        <th>Nội dung</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                    @if (Model != null && Model.Any())
                    {
                        int count = 0;
                        foreach (var item in Model)
                        {
                            count++;
                            <tr class="odd">
                                <td class=" sorting_1">@count</td>
                                <td class="  ">
                                    @if (item.Type.Equals("0"))
                                {<span>Liên hê công ty</span> }
                                else
                                {<span>Liên hê bất động sản</span> }
                            </td>
                            <td class="  ">@item.Name</td>
                            <td class="  ">@item.Address</td>
                            <td class="  ">@item.Phone</td>
                                <td class="  ">@slitString.TruncateAtWord(item.Description, 20)</td>
                            <td class=" ">
                                <div class="btn-group">

                                    <a href="/Admin/Vendor/Edit?VendorId=@item.Id" class="btn btn-xs btn-info">
                                        <i class="icon-edit bigger-120"></i>
                                    </a>
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <a href="/Admin/Vendor/Delete?VendorId=@item.Id" class="btn btn-xs btn-danger">
                                            <i class="icon-trash bigger-160"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">



    $(document).ready(function () {
        var table = $("#VendorTable").DataTable();
        //var arrayfilter = [2, 4];

        createDropFilter(table, [2]);
        bindDropFilter(table, [6]);

    });

    function createDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });

            table.column(i).data().unique().sort().each(function (d, j) {
                filter1.append('<option value="' + d + '">' + d + '</option>');
            });

        });
    }
    function bindDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });
        });
    }
</script>