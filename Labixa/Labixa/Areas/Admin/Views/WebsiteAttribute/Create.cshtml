@{
    ViewBag.Title = "title";
}
@model Labixa.Areas.Admin.ViewModel.WebsiteAtribute.WebsiteAttributeFormModel
@using Outsourcing.Core
@using Outsourcing.Data.Models;
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li><a href="/Admin/WebsiteAttribute/">Quản lý Thuộc tính</a></li>
            <li class="active">Tạo Mới Thuộc tính</li>
        </ul>
    </div>
}



<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Thêm mới Thuộc tính
            </div>
            @using (Html.BeginForm("Create", "WebsiteAttribute", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.MyLabelFor(model => model.Name)
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.MyLabelFor(model => model.Description)
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Description)
                    </div>
                </div>
    <div class="form-group">
        @Html.MyLabelFor(model => model.Type)
        <div class="col-sm-9">
            @Html.EditorFor(model => model.Type)
        </div>
    </div>
                <div class="form-group">
                    @Html.MyLabelFor(model => model.ControlType)
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.ControlType)
                    </div>
                </div>
                <div class="form-group">
                    @Html.MyLabelFor(model => model.IsPublic)
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.IsPublic)
                    </div>
                </div>
 

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" type="submit">
                            <i class="icon-ok bigger-110"></i>
                            Lưu
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="icon-undo bigger-110"></i>
                            Làm lại
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <a href="/Admin/WebsiteAttribute" style="text-decoration:none" class="btn btn-warning">
                            <i class="icon-undo bigger-110"></i>
                            Trở Về
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
