@using Outsourcing.Core
@model Outsourcing.Data.Models.ProductAttributeMapping
@{
    var template = "";
    if (Model.ProductAttribute.ControlType == "TextArea")
    {
        template = "Ckeditor";
    }
    else if (Model.ProductAttribute.ControlType.ToLower().Equals("checkbox"))
    {
        template = "CheckBox";
    }
    else if (Model.ProductAttribute.ControlType.ToLower().Equals("number"))
    {
        template = "Number";
        if (Model.Value.Equals("Default") || Model.Value==null )
        {
        Model.Value = "0";
        }
    }
}
@if (Model.ProductAttribute.Deleted)
{
    @Html.HiddenFor(model => model.Value)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.ProductAttributeId)
    @Html.HiddenFor(model => model.IsRequired)
    @Html.HiddenFor(model => model.DisplayOrder)

}
else if (Model.ProductAttributeId == 24)
{
    <div class="form-group ">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ProductId)
        @Html.HiddenFor(model => model.ProductAttributeId)
        @Html.HiddenFor(model => model.IsRequired)
        @Html.HiddenFor(model => model.DisplayOrder)
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <span>Mục đích:</span>
            </div>
            <div class="single-query col-md-8 col-sm-8 col-xs-12">
                @if (Model.Value == "true")
                {
                    <select class="keyword-input" name="Product.ProductAttributeMappings[22].Value">
                        <option value="true" selected="selected">Nhà bán</option>
                        <option value="false">Nhà thuê</option>
                    </select>
                }
                else
                {
                    <select class="keyword-input" name="Product.ProductAttributeMappings[22].Value">
                        <option value="true">Nhà bán</option>
                        <option value="false" selected="selected">Nhà thuê</option>
                    </select>
                }

            </div>
        </div>
    </div>
}
else if (Model.ProductAttributeId == 30)
{
    <div class="form-group ">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ProductId)
        @Html.HiddenFor(model => model.ProductAttributeId)
        @Html.HiddenFor(model => model.IsRequired)
        @Html.HiddenFor(model => model.DisplayOrder)
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <span>Loại bất động sản:</span>
            </div>
            <div class="single-query col-md-8 col-sm-8 col-xs-12">
                @if (Model.Value == "true")
                {
                    <select class="keyword-input" name="Product.ProductAttributeMappings[28].Value">
                        <option value="true" selected="selected">Nhà ở</option>
                        <option value="false">Đất</option>
                    </select>
                }
                else
                {
                    <select class="keyword-input" name="Product.ProductAttributeMappings[28].Value">
                        <option value="true">Nhà ở</option>
                        <option value="false" selected="selected">Đất</option>
                    </select>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="form-group ">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ProductId)
        @Html.HiddenFor(model => model.ProductAttributeId)
        @Html.HiddenFor(model => model.IsRequired)
        @Html.HiddenFor(model => model.DisplayOrder)
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <span>@Model.ProductAttribute.Description :</span>
            </div>
            <div class="single-query col-md-8 col-sm-8 col-xs-12">
                @Html.EditorFor(model => model.Value, template)
            </div>
        </div>
    </div>
}