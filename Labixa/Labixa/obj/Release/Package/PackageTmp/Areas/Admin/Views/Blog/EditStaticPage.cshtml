@using Outsourcing.Core
@model Labixa.Areas.Admin.ViewModel.BlogFormModel
@{
    ViewBag.Title = "Chỉnh sửa tin tức | KLD website";
}

@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/ckeditor/config.js"></script>

}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="/Admin/Blog">Quản lý tin tức</a>
            </li>
            <li class="active">Chỉnh sửa trang</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Chỉnh sửa trang
            </div>
            @if (Model != null)
            {
                using (Html.BeginForm("EditStaticPage", "Blog", null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.BlogCategoryId)
                    @Html.HiddenFor(model => model.BlogImage)
                    @Html.HiddenFor(model => model.Title)

                    <div class="tabbable">
                        <ul class="nav nav-tabs" id="myTab">
                            <li class="active">
                                <a data-toggle="tab" href="#tab1">
                                    <i class="green ace-icon fa fa-home bigger-120"></i>
                                    Nội dung
                                </a>
                            </li>

                            <li class="">
                                <a data-toggle="tab" href="#tab2">
                                    Chỉnh sửa SEO
                                </a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="tab1" class="tab-pane fade active in">
                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.IsAvailable)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.IsAvailable)
                                        @Html.ValidationMessageFor(model => model.IsAvailable)
                                    </div>
                                </div>
                               
                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.Content)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Content, "CkEditor")
                                        @Html.ValidationMessageFor(model => model.Content)
                                    </div>
                                </div>
                            </div>

                            <div id="tab2" class="tab-pane fade">

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaKeywords)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaKeywords)
                                        @Html.ValidationMessageFor(model => model.MetaKeywords)
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaTitle)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaTitle)
                                        @Html.ValidationMessageFor(model => model.MetaTitle)
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.Description)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Description)
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>
                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.Slug)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Slug)
                                        @Html.ValidationMessageFor(model => model.Slug)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="icon-ok bigger-110"></i>
                                Lưu
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <button class="btn" type="reset">
                                <i class="icon-undo bigger-110"></i>
                                Làm lại
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <h1>Không tìm thấy tin tức!</h1>
            }
        </div>
    </div>
</div>