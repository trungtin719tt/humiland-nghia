@using Outsourcing.Data.Models
@model IEnumerable<Color>
@{
    ViewBag.Title = "Index";

}

@section scripts{
    <script src="/Content/admin/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Content/admin/js/jquery.dataTables.bootstrap.js" type="text/javascript"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">

            <a class="btn btn-success" href="/Admin/Color/Create" style="margin-bottom:10px">Thêm mới Màu</a>

            <div class="row" style="margin-bottom:10px">
                <div class="col-sm-6">
                </div>

            </div>


            <div class="table-header">Danh sách Màu</div>

            <table id="productTable" class="table table-bordered table-striped table-fixed-header">
                <thead>
                    <tr role="row">
                        <th>Tên Màu</th>
                        @*<th>Phần trăm</th>*@
                        @*<th>Giá</th>
                            <th>Vị Trí</th>
                            <th>Giảm Giá</th>
                            <th>Ngày Tạo</th>
                            <th>Hiển thị</th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                    @if (Model != null && Model.Any())
                    {
                        int count = 0;
                        foreach (var item in Model)
                        {
                            count++;
                            <tr class="odd">
                                <td class="hidden-480 ">@item.Name</td>
                                <td class=" ">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">

                                        <a href="/Admin/Color/Edit?ColorId=@item.Id" class="btn btn-xs btn-info">
                                            <i class="icon-edit bigger-160"></i>
                                        </a>
                                        <a href="/Admin/Color/Delete?ColorId=@item.Id" class="btn btn-xs btn-danger">
                                            <i class="icon-trash bigger-160"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">



    $(document).ready(function () {
        var table = $("#productTable").DataTable();
        //var arrayfilter = [2, 4];

        createDropFilter(table, [2]);
        bindDropFilter(table, [5]);

    });

    function createDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });

            table.column(i).data().unique().sort().each(function (d, j) {
                filter1.append('<option value="' + d + '">' + d + '</option>');
            });

        });
    }
    function bindDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });
        });
    }
</script>