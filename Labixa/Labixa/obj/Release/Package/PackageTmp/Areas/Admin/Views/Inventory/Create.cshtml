@using Outsourcing.Core
@model Labixa.Areas.Admin.ViewModel.InventoryModels
@{
}
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">

            <div class="alert alert-block alert-info">
                Nhập Kho Cho Sản Phẩm <strong>@Model.product.Name</strong> Giá bán <strong>@Model.product.Price.ToString("#,##0")</strong>
            </div>
            @using (Html.BeginForm("Create", "Inventory", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.product.Id)
                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                <i class="green ace-icon fa fa-home bigger-120"></i>
                                @Resources.Content
                            </a>
                        </li>

                    </ul>

                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Mô Tả</label>
                               
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.inventory.Description)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Số Lượng</label>
                               
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.inventory.Quantity)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Đơn Giá</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.inventory.Price)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Vị Trí</label>

                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.locationId, Model.Location)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Nhập Kho</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.inventory.IsImport)
                                </div>
                            </div>
                        </div>

                        @*<div id="tab2" class="tab-pane fade">

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaKeywords)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaKeywords)
                                        @Html.ValidationMessageFor(model => model.MetaKeywords)
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaTitle)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaTitle)
                                        @Html.ValidationMessageFor(model => model.MetaTitle)
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.MetaDescription)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MetaDescription)
                                        @Html.ValidationMessageFor(model => model.MetaDescription)
                                    </div>
                                </div>
                                <div class="form-group ">
                                    @Html.MyLabelFor(model => model.Slug)
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Slug)
                                        @Html.ValidationMessageFor(model => model.Slug)
                                    </div>
                                </div>
                            </div>*@

                    </div>
                </div>



                @*
                    partial for group button
                *@
                @Html.Partial("_PartialButtonGroup", "/Admin/Inventory")
            }
        </div>
    </div>
</div>
