                                    @Html.DropDownListFor(model => model.notification.TypeNotifyId,Model.ListType)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Mô tả</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.notification.Description)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Đã Đọc</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.notification.isRead)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId"> Quan Trọng</label>

                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.notification.isUrgent)
                                </div>
                            </div>
                          
                        </div>

