@using Outsourcing.Data.Models
@model IEnumerable<Order>
@Scripts.Render("~/Content/dataTable")

@{
    ViewBag.Title = "Index";
}
@section scripts{
    <script src="/Content/admin/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Content/admin/js/jquery.dataTables.bootstrap.js" type="text/javascript"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li class="active">Quản lý Đăng ký</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">

            @*<a class="btn btn-success" href="/Admin/Order/Create" style="margin-bottom:10px">Thêm mới order</a>*@

            <div class="table-header">Danh sách Đăng ký</div>

            <table id="productTable" class="table table-bordered table-striped table-fixed-header">
                <thead>
                    <tr role="row">
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Nghề nghiệp</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Môn</th>
                        <th>Ngày tạo</th>
                        <th>Tình trạng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                    @if (Model != null && Model.Any())
                    {
                        int count = 0;
                        foreach (var item in Model.OrderByDescending(p=>p.DateCreated))
                        {
                            count++;
                            <tr class="odd">
                                <td class=" sorting_1">@count</td>
                                <td class="hidden-480 ">@item.CustomerName</td>
                                <td class="hidden-480 ">@item.Description</td>
                                <td class="hidden-480 ">@item.CustomerPhone</td>
                                <td class="hidden-480 ">@item.CustomerEmail</td>
                                <td class="hidden-480 ">@item.Note</td>
                                <td class=" ">@String.Format("{0:dd/MM/yyyy HH:MM}", @item.DateCreated)</td>
                                <td class="hidden-480 ">
                                    @if (item.Deleted)
                                    {
                                        <span class="label label-sm label-warning">Đã xóa</span>
                                    }
                                    else
                                    {

                                        <span class="label label-sm label-success">Hiển thị</span>
                                    }
                                </td>
                                <td class=" ">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">

                                        @*<a href="/Admin/Order/Edit?orderId=@item.Id" class="btn btn-xs btn-info">
                                            <i class="icon-edit bigger-160"></i>
                                        </a>*@
                                        <a href="/Admin/Order/Delete?orderId=@item.Id" class="btn btn-xs btn-danger">
                                            <i class="icon-trash bigger-160"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        var table = $("#productTable").DataTable();
        //var arrayfilter = [2, 4];

        createDropFilter(table, [2]);
        bindDropFilter(table, [5]);

    });

    function createDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });

            table.column(i).data().unique().sort().each(function (d, j) {
                filter1.append('<option value="' + d + '">' + d + '</option>');
            });

        });
    }
    function bindDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });
        });
    }
</script>