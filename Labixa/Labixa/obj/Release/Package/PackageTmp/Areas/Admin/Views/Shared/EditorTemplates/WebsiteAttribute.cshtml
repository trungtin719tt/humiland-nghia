@using Outsourcing.Core
@model Outsourcing.Data.Models.WebsiteAttribute
@{
    var template = "";
    if (Model.ControlType.ToLower() == "textarea")
    {
        template = "Ckeditor";
    }
    else if (Model.ControlType.ToLower() == "image")
    {
        template = "GetImageFromElfinder";
    }else if(Model.ControlType.ToLower()=="checkbox")
    {
        template = "CheckBox";
    }
}
<div class="form-group ">
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)
    @*@Html.HiddenFor(model => model.Description)*@
    @Html.HiddenFor(model => model.Type)
    @Html.HiddenFor(model => model.ControlType)
    @Html.HiddenFor(model => model.Deleted)
    
    <div class="col-sm-3 control-label no-padding-right">
        <label class="col-sm-12 control-label no-padding-right" for="">
            @Model.Name
        </label>
        <label class="col-sm-12 control-label no-padding-right" for="">
            Kích hoạt:
            @Html.EditorFor(model => model.IsPublic)
        </label>


   
    </div>
    <div class="col-sm-9">
        @Html.EditorFor(model => model.Value, template)
        @Html.ValidationMessageFor(model => model.Value)
    </div>
    <div class="col-sm-3 control-label no-padding-right">
        <label class="col-sm-12 control-label no-padding-right" for="">
          @if (Model.Name.Equals("AboutUs"))
          {
            <span>Hình Đại Diện</span>
          }
          else
          {
            <span>Mô tả</span>
          }
        </label>
    </div>
    <div class="col-sm-9">
        @if (Model.Name.Equals("AboutUs"))
        {
            @Html.EditorFor(model => model.Description, "GetImageFromElfinder")
            @Html.ValidationMessageFor(model => model.Description)
        }
        else
        {
        @Html.EditorFor(model => model.Description, "CkEditor")
        @Html.ValidationMessageFor(model => model.Description)
        }
            </div>
</div>
